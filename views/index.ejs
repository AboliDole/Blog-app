<% include ./partials/header %>

<div class ="ui main text container">
  <div class="ui huge header">BLOG APP</div>
  <div class="ui top attached segment">
    <div class="ui divided items">
      <%blogs.forEach(function(blog){%>
         <div class="ui item">
              <div class="ui medium circular image">
                <img src="<%= blog.image %>"/>
              </div>
              
              <div class="content">
                  <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                  
                  <div class="meta">
                    <span><%= blog.created.toDateString() %></span>
                  </div>
                  
                  <div class="description">
                    <p><%-blog.body.substring(0, 45)%>...</p>
                  </div>
                  
                  <div class="extras">
                     <a class="ui floated basic blue button" href="/blogs/<%= blog._id %>">
                       Read More
                       <i class="chevron right icon"></i>
                      </a>
                  </div>
                
              </div>
          </div>
      <% }); %> 
    </div>
  </div>
</div>
<% include ./partials/footer %>